<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/myNote_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="내 음역대"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:fontFamily="@font/nanumsquareround"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/myNote_max_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="45dp"
        android:gravity="center"
        android:text="최고 음"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myNote_Title"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/myNote_min_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:gravity="center"
        android:text="최저 음"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myNote_Title"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/myNote_max"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_record_result"
        android:gravity="center"
        android:text="A3"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myNote_max_sub"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/myNote_min"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_record_result"
        android:gravity="center"
        android:text="D4"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myNote_max_sub"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/myNoteModifyButton"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bin_orange"
        android:text="수정"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myNote_max"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/myNoteOkButton"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bin_gray"
        android:text="확인"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/myNoteModifyButton"
        app:layout_constraintTop_toBottomOf="@id/myNote_max"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>