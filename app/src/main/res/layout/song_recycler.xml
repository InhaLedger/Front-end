<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="20dp"
    android:paddingVertical="5dp"
    android:background="?android:attr/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/rv_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="?android:attr/textColorPrimary"
        android:text="@string/number"
        android:fontFamily="@font/nanumsquareround"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/rv_album_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rv_num"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/rv_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textStyle="bold"
        android:fontFamily="@font/nanumsquareround"
        android:layout_marginStart="20dp"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintLeft_toRightOf="@id/rv_album_img"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rv_tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/singer"
        android:fontFamily="@font/nanumsquareround"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintLeft_toRightOf="@id/rv_album_img"
        app:layout_constraintTop_toBottomOf="@id/rv_tv_title"/>

    <CheckBox
        android:id="@+id/checkbox_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_basket_checkbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>